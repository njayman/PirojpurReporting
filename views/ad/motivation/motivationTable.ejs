<%if (records.length >0){ %>
    <table class="table table-bordered table-striped" id="tblCustomers" cellspacing="0" cellpadding="0">
    <thead>
    <tr>
        <th>ক্রমিক নং</th>
        <th>জেলার নাম</th>
        <th>উপজেলার নাম</th>
        <th>কৃষকের নাম ও পিতা/স্বামীর নাম</th>
        <th>জাতীয় পরিচয়পত্র নম্বর</th>
        <th>গ্রাম/ব্লক</th>
        <th>মোবাইল নম্বর</th>
        <th>মন্তব্য</th>
        <th>পরিবর্তন/মুছুন</th>

    </tr>
    </thead>
    <tbody>
        <% records.forEach(function(row,index){ %>
            <tr>
                <td><%= index+1 %></td>
                <td><%= row.district %></td>
                <td><%= row.upazilla %></td>
                <td><%= row.name %></td>
                <td><%= row.nid %></td>
                <td><%= row.village%></td>
                <td><%= row.mobile %></td>
                <td><%= row.comment %></td>
                <td><a class="btn btn-primary btn-xs" href="/upazilla/motivationEdit/<%= row.id %>"><i class="fa fa-edit"></i></a>
                    <a class="btn btn-danger btn-xs" href="/upazilla/motivationDelete/<%= row.id %>"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>
<% }else{ %>
    <table class="table table-bordered table-striped" id="tblCustomers" cellspacing="0" cellpadding="0">
        <thead>
        <tr>
            <th>ক্রমিক নং</th>
        <th>জেলার নাম</th>
        <th>উপজেলার নাম</th>
        <th>কৃষকের নাম ও পিতা/স্বামীর নাম</th>
        <th>জাতীয় পরিচয়পত্র নম্বর</th>
        <th>গ্রাম/ব্লক</th>
        <th>মোবাইল নম্বর</th>
        <th>মন্তব্য</th>
        </tr>
        </thead>
        <tbody>
        <% records.forEach(function(row){ %>
            <tr>
                <td colspan="10">No data Found</td>
            </tr>
        <% }) %>
        </tbody>
    </table>
<% } %>